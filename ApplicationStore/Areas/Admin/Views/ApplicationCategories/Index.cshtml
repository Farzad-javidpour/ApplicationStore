@model IEnumerable<ApplicationStore.Models.ApplicationCategory>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-primary p-md-3">لیست گروه نرم افزارها</h2>

<p>
    <a asp-action="Create">افزودن گروه جدید&nbsp;<i class="fal fa-plus-square"></i></a>
</p>
<table class="table table-striped table-hover border">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStoreUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStoreUser.FirstName)&nbsp;@Html.DisplayFor(modelItem => item.ApplicationStoreUser.LastName)
            </td>
            @if (item.State == ApplicationStore.Models.ViewModels.RowStateEnum.Active)
            {
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            }
            else
            {
                <td>
                    <i class="far fa-comment-times"></i>
                </td>
            }
        </tr>
}
    </tbody>
</table>
