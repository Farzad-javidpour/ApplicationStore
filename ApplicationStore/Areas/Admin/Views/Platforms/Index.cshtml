@model IEnumerable<ApplicationStore.Models.Platform>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-primary p-md-3">لیست پلتفرم ها</h2>

<p>
    <a asp-action="Create" class="text-info">افزودن پلتفرم جدید&nbsp;<i class="fal fa-plus-square"></i></a>
</p>
<table class="table table-striped table-hover border">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStoreUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationStoreUser.FirstName)&nbsp;@Html.DisplayFor(modelItem => item.ApplicationStoreUser.LastName)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>
